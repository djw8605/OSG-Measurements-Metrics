
<graphtool-config>

  <import module="graphtool.web"> WebHost, StaticContent, HelloWorld </import>
  <import module="gratia.web">Gratia</import>
  <import module="gratia.config" data_file="gratia_graphs.xml" />
  <import module="gratia.config" data_file="text_queries.xml" />

  <class name="GratiaWeb" type="Gratia">
      <attribute name="security">GratiaSecurity</attribute>
      <attribute name="static_url">http://t2.unl.edu/store/gratia/</attribute>
      <attribute name="vos_url">http://t2.unl.edu/gratia/xml/vo_corrected_table</attribute>
      <attribute name="registered_vos_url">http://www.grid.iu.edu/osg-includes/vo_txt.php</attribute>
      <attribute name="keep_vos">gpn, mipp, Unknown, ss, mm, hypercp, tigre, dteam</attribute>
  </class>

  <class name="static" type="StaticContent">
    <directory name="content"> $GRAPHTOOL_ROOT/static_content </directory>
  </class>

  <class name="web" type="WebHost">
    <mount location="/bar_graphs" content="image/png"> <instance name="gratia_bar_grapher" /> </mount>
    <mount location="/pie_graphs" content="image/png"> <instance name="gratia_pie_grapher" /> </mount>
    <mount location="/cumulative_graphs" content="image/png"> <instance name="gratia_cumulative_grapher" /> </mount>
    <mount location="/gridscan_graphs" content="image/png"> <instance name="gridscan_grapher" /> </mount>
    <mount location="/xml" content="text/xml"> <instance name="query_xml" /> </mount>
    <mount location="/site_xml" content="text/xml"> <instance name="site_xml"/> </mount>
    <mount location="/vo_xml" content="text/xml"> <instance name="vo_xml"/> </mount>
    <mount location="/user_xml" content="text/xml"> <instance name="user_xml"/> </mount>
    <mount location="/site_graphs" content="image/png"> <instance name="gratia_site_grapher"/> </mount>
    <mount location="/vo_graphs" content="image/png"> <instance name="gratia_vo_grapher"/> </mount>
    <mount location="/user_graphs" content="image/png"> <instance name="gratia_user_grapher"/> </mount>
    <instance name="static" />
    <instance name="GratiaWeb" location="/"/>
    <config module="gratia.config">development.conf</config>
  </class>

</graphtool-config>


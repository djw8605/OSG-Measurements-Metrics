      <sql>
select
  truncate(unix_timestamp(time)/:span, 0)*:span as time,
  vo,
  avg(runningJobs)
from
  (select
     time,
     vo,
     sum(runningJobs) as runningJobs
   from
     vo_info
   join site_info s on vo_info.hostName=s.cename
   where
     time &gt;= :starttime AND time &lt; :endtime AND
     vo regexp :vo AND
     s.sitename regexp :facility AND

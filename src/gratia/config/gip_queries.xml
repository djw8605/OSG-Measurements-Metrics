    <query name="gip_vo">
      <inputs>
        <input name="span" type="eval" kind="sql">1800</input>
        <input name="starttime" type="datetime" kind="sql">time.time()-2*86400</input>
        <input name="endtime" type="datetime" kind="sql">time.time()</input>

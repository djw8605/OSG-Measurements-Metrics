<graphtool-config>

  <import file="$CONFIG_ROOT/generic_queries.xml" />

  <class type="PaSqlQueries" name="ProdAgentBarQueries">

    <attribute name="display_name"> Bar Graphs </attribute>

    <query name="facility_hours" base="GratiaGenericQuery.jobs_query">
      <sql>
        <filler name="group"> CETable.facility_name </filler>
        <filler name="column"> sum(EndTime - StartTime)/3600 </filler>
        </filler>
      </sql>
      <attribute name="pivot_name">Facility</attribute>
      <attribute name="title">Hours Spent on Successful Jobs</attribute>
      <attribute name="graph_type">GratiaStackedBar</attribute>
    </query>

  </class>

</graphtool-config>
